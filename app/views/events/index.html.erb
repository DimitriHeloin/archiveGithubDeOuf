<h1>Listing Events</h1>

<%= image_tag(@array_chart[0]) %>
<%= image_tag(@array_chart[1]) %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Type</th>
      <th>Public</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.type %></td>
        <td><%= event.public %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

