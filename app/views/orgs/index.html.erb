<p id="notice"><%= notice %></p>

<h1>Listing Orgs</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Login</th>
      <th>Gravatar</th>
      <th>Url</th>
      <th>Avatar url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orgs.each do |org| %>
      <tr>
        <td><%= org.id %></td>
        <td><%= org.login %></td>
        <td><%= org.gravatar_id %></td>
        <td><%= org.url %></td>
        <td><%= org.avatar_url %></td>
        <td><%= link_to 'Show', org %></td>
        <td><%= link_to 'Edit', edit_org_path(org) %></td>
        <td><%= link_to 'Destroy', org, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

